@page "/projects/{ProjectId:int}/tickets"
@inject ITicketScreen _ticketScreen
 <div class="row">
      <h4 class="text-info text-center">All tickets from Project with ID:@ProjectId</h4>
 </div>

 @if (!string.IsNullOrWhiteSpace(error))
{
    <div class="row">
        <div class="col">
            <div class="alert alert-danger">
                @error
                @(error = string.Empty)
            </div>

        </div>
    </div>
}

 <div class="row my-3">
     <div class="col">
      <input type="text" class="form-control" @bind-value="searchFilter" />  
      </div>
      <div class="col-3">
      <button type="button" class="btn btn-primary form-control" @onclick="SearchHandler">Search</button>     
      </div>
 </div>
  
@if (tickets is not null)
{   
    <div class="row">      
        @foreach(var item in tickets)
        {
         <DisplayTicket Ticket="@item"/>
        }
    </div>
}
else
{
    <div class="row">
        <div class="col">
            <img class="text-center" src="data:image/jpeg;base64," height="200" />
        </div>
    </div>
}
@code {
    [Parameter]
    public int ProjectId { get; set; }
    IEnumerable<Ticket> tickets;
    string searchFilter;
    string error;

    protected override async Task OnInitializedAsync()
    {
        tickets = await _ticketScreen.ViewTickets(ProjectId);
    }
    async Task SearchHandler()
    {
        var tempTickets= await _ticketScreen.SearchTickets(searchFilter);

        if (tempTickets is not null)
            tickets = tempTickets;

        else
            error = $"Not found. Filter was {searchFilter}";


    }
}
