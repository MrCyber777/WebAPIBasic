
    <div class="modal" tabindex="-1" style="display:block;">
        <div class="modal-dialog modal-dialog-centered modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title  text-info ">Confirm Deleting</h4>
                    <br />
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="()=>OnConfirmed.InvokeAsync(false)">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body text-center">
                    <p class="text-danger"><strong>Are you sure you want to delete?</strong></p>                                          
                    @ItemInfo                                    
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" @onclick="()=>OnConfirmed.InvokeAsync(true)">DELETE</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="()=>OnConfirmed.InvokeAsync(false)">Cancel</button>

                </div>
            </div>
        </div>
    </div>


    @code {
        [Parameter] public RenderFragment ItemInfo { get; set; }
        [Parameter] public EventCallback<bool> OnConfirmed { get; set; }

    }
